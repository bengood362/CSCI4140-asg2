{
  "manifest_version": 2,
  "name": "My CSCI4140 Assignment 2",
  "version": "1.0",

  "description": "I am doing my CSCI4140 Assignment, build a image editor",
  "icons": {"80":"p.png"},

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts":[
    {
      "matches": ["http://0.0.0.0:8080/Chevereto-Free/*", "http://0.0.0.0:8080/*"],
      "js": ["contents.js"]
    }
  ],

  "browser_action":{
    "default_popup": "popup.html",
    "default_icon": "p.png"
  },

  "permissions":[
    "contextMenus",
    "tabs",
    "storage"
  ]

}